<script>
$(document).ready(function() {
    var max_fields      = 100; //maximum input boxes allowed
    var wrapper         = $(".input_fields_wrap"); //Fields wrapper
    var add_button      = $("#addrule"); //Add button ID

    var x = 1; //initlal text box count
    $(add_button).click(function(e){ //on add input button click
        e.preventDefault();
       
        var criteria=document.getElementById('criteria').value;
        var criteriaVal=document.getElementById('condi').value;
        var ruleval=document.getElementById('rulevalue').value;
        var Action=document.getElementById('actionvalue').value;
        if(x < max_fields){ //max input box allowed
            x++; //text box increment
            //$(wrapper).append('<div>'+criteria+" "+ criteriaVal+" "+ ruleval+"   " +'<a href="#" class="remove_field">Remove</a><button type="submit" class="btn btn-primary">Test Rule</button></div>'); //add input box
             $(wrapper).append('<div style="display:inline;"> <div class="col-lg-12"><div class="table-responsive"><table class="table table-hover table-striped"><thead><tr><th style="text-align: left;"></th><th style="text-align: left;"></th><th style="text-align: left;"></th><th style="text-align: left;"></th><th style="text-align: left;"></th></tr></thead><tbody><tr><td style="text-align: left;">'+criteria+'</td><td style="text-align: left;">'+criteriaVal+'</td><td style="text-align: left;">'+ruleval+'</td><td style="text-align: left;">'+Action+'</td><td style="text-align: left;"><button type="submit" class="btn btn-primary" onclick="testrule()">Test Rule</button></td></tr></tbody></table></div></div><br><a style="padding-left:30px" href="#" class="remove_field">Remove</a></div>');
        }
    });
   
    $(wrapper).on("click",".remove_field", function(e){ //user click on remove text
        e.preventDefault(); $(this).parent('div').remove(); x--;
    })
});
</script>
<script type="text/javascript">
function testrule(){
        var criteria=document.getElementById('criteria').value;
        var criteriaVal=document.getElementById('condi');
        var condop=criteriaVal.options[criteriaVal.selectedIndex].value;
        var ruleval=document.getElementById('rulevalue').value;
        var Action=document.getElementById('actionvalue').value;
    var datastr={
        "criteria":criteria,
        "criteriaVal":condop,
        "ruleval":ruleval,
        "Action":Action
    };
    //alert(JSON.stringify(datastr));
    $.ajax({
    type: "POST",
    data: JSON.stringify(datastr),
    contentType: 'application/json',
    url: "/testrule",
    success: function(data){
       // alert(data);
        if(data!=null)
        alert(Action);
    else 
        alert("rules not met");
    },
    failure: function(errMsg) {
        alert(errMsg);
    }
});
}
